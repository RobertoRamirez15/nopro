<?xml version="1.0" encoding="UTF-8"?>  
 <!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->  
 <widget xmlns   = "http://www.w3.org/ns/widgets"  
     xmlns:gap = "http://phonegap.com/ns/1.0"  
     id    = "com.phonegap.catalogo"  
     version  = "1.0.0">  
	 
   <name> Catalogo De Calzado </name>  
   
   <description>  
     Realizacion de un catalogo movil(muestra informacion por medio de una base de datos)
   </description>  
   
   <author href="https://build.phonegap.com" email="micorreo@gmail.com">  
    Joel Alexis Ramirez Corona, Roberto Ramirez Baleon, Angel Perez Sanchez, Andri Jaret Cruz Sanchez, America Ivon Calvillo Castillo.
   </author>  
   
   <!-- Personaliza la aplicacion y plataforma  -->  
   <preference name="phonegap-version"      value="3.7.0" />    
  <!-- <preference name="orientation"        value="portrait" />  -->  
   <preference name="target-device"       value="universal" />   
   <preference name="fullscreen"         value="true" />      
   <preference name="android-installLocation"  value="auto" />  
   <preference name="SplashScreen" value="splash"/>
   <preference name="SplashScreenDelay" value="4000"/>


   <!-- Plugins -->  
   <!-- Core plugins -->  

   <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />  
   <gap:plugin name="org.apache.cordova.vibration" />  

   <!-- Third party plugins -->  
   

   
   <!-- Define los iconos de la aplicacion para cada plataforma -->  
   <icon src="icon.png" />  
   <icon src="cel/icon/android/icon-36-ldpi.png"  gap:platform="android"  gap:qualifier="ldpi" />  
   <icon src="cel/icon/android/icon-48-mdpi.png"  gap:platform="android"  gap:qualifier="mdpi" />  
   <icon src="cel/icon/android/icon-72-hdpi.png"  gap:platform="android"  gap:qualifier="hdpi" />  
   <icon src="cel/icon/android/icon-96-xhdpi.png" gap:platform="android"  gap:qualifier="xhdpi" />  

   <!-- Define la pantalla de splash para cada plataforma -->  
   <gap:splash src="splash.png" />
   <gap:splash src="cel/screen/android/screen-ldpi-portrait.png"    gap:platform="android" gap:qualifier="port-ldpi" />  
   <gap:splash src="cel/screen/android/screen-mdpi-portrait.png"    gap:platform="android" gap:qualifier="port-mdpi" />  
   <gap:splash src="cel/screen/android/screen-hdpi-portrait.png"    gap:platform="android" gap:qualifier="port-hdpi" />  
   <gap:splash src="cel/screen/android/screen-xhdpi-portrait.png"   gap:platform="android" gap:qualifier="port-xhdpi" />  

   
 </widget>  